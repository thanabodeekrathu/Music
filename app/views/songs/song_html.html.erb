<p id="notice"><%= notice %></p>

<h1>Songs</h1>

<table style="text-align: center;">
  <thead>
    <tr>
      <th>Name</th>
      <th>Band</th>
      <th>Album</th>
      <th>Genre</th>
      <th>Chord</th>
    </tr>
  </thead>

  <tbody>
    <% @songs.each do |song| %>
      <tr>
        <td><%= song.name %></td>
        <td><%= song.band %></td>
        <td><%= song.album %></td>
        <td><%= song.genre %></td>
        <td><%= song.chord %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
